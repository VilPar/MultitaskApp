<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        xmlns:Properties="clr-namespace:WpfApp12.Properties" x:Class="WpfApp12.Window1"
        mc:Ignorable="d"
        Title="Brush" Height="148.825" Width="325.848">
    <Grid>
        <Slider x:Name="slider1" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="294" Maximum="100" Minimum="7"  IsSnapToTickEnabled="True" Value="20" />
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Value, ElementName=slider1}" VerticalAlignment="Top" Height="70" Width="228" FontSize="{Binding Value, ElementName=slider1}"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="243,10,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="243,35,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_1"/>
    </Grid>
</Window>
